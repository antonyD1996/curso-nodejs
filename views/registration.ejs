<!DOCTYPE html>
<html lang="en">

<%- include('./include/head.ejs') %>

    <body>
        <!-- include the navigation partial -->
        <%- include('./include/navbar.ejs') %>

            <div class="uk-container">
                <div class="uk-card uk-card-default uk-card-body">
                    <h3 class="uk-heading-small uk-center-top">Create an account</h3>
                    <form method="POST" action="auth/register">
                        <fieldset class="uk-fieldset">
                            <legend class="uk-legend">Name</legend>
                            <div class="uk-margin">
                                <input class="uk-input" name="fullname" type="text"
                                    placeholder="Enter first and las name">
                            </div>
                            <legend class="uk-legend">Email</legend>
                            <div class="uk-margin">
                                <input class="uk-input" name="email" type="email" rows="5"
                                    placeholder="Enter your email"></input>
                            </div>
                            <legend class="uk-legend">Password</legend>
                            <div class="uk-margin">
                                <input class="uk-input" name="password" type="password" rows="5"
                                    placeholder="Enter your password"></input>
                            </div>
                            <div class="uk-margin">
                                <button type="submit" class="uk-button  button-primary">Register</button>

                            </div>
                        </fieldset>
                    </form>
                    or
                    <button type="uk-button" class=" uk-button button-primary"><a href="auth/login">Login</a></button>
                </div>

            </div>
    </body>

</html>